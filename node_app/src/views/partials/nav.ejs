<%
  function isActive(path) {
    if (!currentPath) {
      return false;
    }
    if (path === '/') {
      return currentPath === '/';
    }
    return currentPath === path || currentPath.startsWith(path + '/');
  }
%>
<nav class="main-nav">
  <ul class="nav nav-pills justify-content-end">
    <li class="nav-item">
      <a class="nav-link <%= isActive('/') ? 'active' : '' %>" href="/">Dashboard</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= isActive('/departments') ? 'active' : '' %>" href="/departments">Abteilungen</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= isActive('/employees') ? 'active' : '' %>" href="/employees">Mitarbeiter</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= isActive('/schedule') ? 'active' : '' %>" href="/schedule">Dienstplan</a>
    </li>
  </ul>
</nav>
